// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Debug 'Story' grammar",
			"type": "antlr-debug",
			"request": "launch",
			"input": "src/domains/story/grammar/Story.txt",
			"grammar": "src/domains/story/grammar/Story.g4",
			"startRule": "model",
			"printParseTree": true,
			"visualParseTree": true
		},
		{
			"name": "Debug 'Rule' grammar",
			"type": "antlr-debug",
			"request": "launch",
			"input": "src/domains/rules/grammar/Rules.txt",
			"grammar": "src/domains/rules/grammar/Rules.g4",
			"startRule": "model",
			"printParseTree": true,
			"visualParseTree": true
		}
	]
}
